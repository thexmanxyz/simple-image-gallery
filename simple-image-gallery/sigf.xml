<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="content" method="upgrade">
    <name>Simple Image Gallery Fork</name>
    <author>Andreas Kar</author>
    <authorEmail>andreas.kar@gmx.at</authorEmail>
    <copyright>Copyright Â© 2020 Andreas Kar. All rights reserved.</copyright>
    <creationDate>27.01.2020</creationDate>
    <license>https://www.gnu.org/licenses/gpl.html GNU/GPL</license>
    <version>4.2.0</version>
    <description>PLG_SIGF_XML_DESC</description>
    <!-- Parameters -->
    <params>
        <param type="spacer" default="PLG_SIGF_SPACER_MAIN" />
        <param name="show_copyright" type="list" default="on" label="PLG_SIGF_SHOW_COPYRIGHT" description="PLG_SIGF_SHOW_COPYRIGHT_DESC">
            <option value="on">PLG_SIGF_SHOW_COPYRIGHT_OPT_ON</option>
            <option value="off">PLG_SIGF_SHOW_COPYRIGHT_OPT_OFF</option>
        </param>
        <param name="mootools" type="list" default="on" label="PLG_SIGF_MOOTOOLS" description="PLG_SIGF_MOOTOOLS_DESC">
            <option value="on">PLG_SIGF_MOOTOOLS_OPT_ON</option>
            <option value="off">PLG_SIGF_MOOTOOLS_OPT_OFF</option>
        </param>
        <param name="galleries_rootfolder" type="text" default="images/stories" label="PLG_SIGF_ROOTFOLDER" description="PLG_SIGF_ROOTFOLDER_DESC" />
        <param name="jQueryHandling" type="list" default="1.12.4" label="PLG_SIGF_JQUERY_HANDLING" description="PLG_SIGF_JQUERY_HANDLING_DESC">
            <option value="0">PLG_SIGF_DO_NOT_LOAD_THE_JQUERY_LIBRARY</option>
            <option value="1.8.3">PLG_SIGF_LOAD_V1_8_X_LATEST_COPY</option>
            <option value="1.9.1">PLG_SIGF_LOAD_V1_9_X_LATEST_COPY</option>
            <option value="1.10.2">PLG_SIGF_LOAD_V1_10_X_LATEST_COPY</option>
            <option value="1.11.3">PLG_SIGF_LOAD_V1_11_X_LATEST_COPY</option>
            <option value="1.12.4">PLG_SIGF_LOAD_V1_12_X_LATEST_COPY</option>
        </param>
        <param type="spacer" default="PLG_SIGF_SPACER_THUMBNAILS" />
        <param name="thb_width" type="text" default="360" size="6" label="PLG_SIGF_TW" description="PLG_SIGF_TW_DESC" />
        <param name="thb_height" type="text" default="240" size="6" label="PLG_SIGF_TH" description="PLG_SIGF_TH_DESC" />
        <param name="jpg_quality" type="text" default="90" size="6" label="PLG_SIGF_TQ" description="PLG_SIGF_TQ_DESC" />
        <param name="cache_expire_time" type="text" default="86400" size="6" label="PLG_SIGF_TCEXP" description="PLG_SIGF_TCEXP_DESC" />
        <param name="memoryLimit" type="text" default="" size="6" label="PLG_SIGF_ML" description="PLG_SIGF_ML_DESC" />
        <param type="spacer" default="PLG_SIGF_SPACER_FB_GENERAL" />
        <param name="fancybox_cdn" type="list" default="on" label="PLG_SIGF_FB_CDN" description="PLG_SIGF_FB_CDN_DESC">
            <option value="on">PLG_SIGF_FB_CDN_OPT_ON</option>
            <option value="off">PLG_SIGF_FB_CDN_OPT_OFF</option>
        </param>
        <param name="fancybox_version" type="text" hint="3.5.7" default="3.5.7" label="PLG_SIGF_FB_VERSION" description="PLG_SIGF_FB_VERSION_DESC" />
        <param name="fancybox_image_target" type="list" default="_blank" label="PLG_SIGF_FB_IMAGE_TARGET" description="PLG_SIGF_FB_IMAGE_TARGET_DESC">
            <option value="_self">PLG_SIGF_FB_IMAGE_TARGET_OPT_SELF</option>
            <option value="_blank">PLG_SIGF_FB_IMAGE_TARGET_OPT_BLANK</option>
            <option value="_parent">PLG_SIGF_FB_IMAGE_TARGET_OPT_PARENT</option>
            <option value="_top">PLG_SIGF_FB_IMAGE_TARGET_OPT_TOP</option>
        </param>
        <param type="spacer" default="PLG_SIGF_SPACER_FB_BUTTONS" />
        <param name="fancybox_button_slideshow" type="list" default="on" label="PLG_SIGF_FB_BUTTON_SLIDESHOW" description="PLG_SIGF_FB_BUTTON_SLIDESHOW_DESC">
            <option value="on">PLG_SIGF_FB_BUTTON_SLIDESHOW_OPT_ON</option>
            <option value="off">PLG_SIGF_FB_BUTTON_SLIDESHOW_OPT_OFF</option>
        </param>
        <param name="fancybox_button_fullscreen" type="list" default="on" label="PLG_SIGF_FB_BUTTON_FULLSCREEN" description="PLG_SIGF_FB_BUTTON_FULLSCREEN_DESC">
            <option value="on">PLG_SIGF_FB_BUTTON_FULLSCREEN_OPT_ON</option>
            <option value="off">PLG_SIGF_FB_BUTTON_FULLSCREEN_OPT_OFF</option>
        </param>				
        <param name="fancybox_button_thumbs" type="list" default="on" label="PLG_SIGF_FB_BUTTON_THUMBS" description="PLG_SIGF_FB_BUTTON_THUMBS_DESC">
            <option value="on">PLG_SIGF_FB_BUTTON_THUMBS_OPT_ON</option>
            <option value="off">PLG_SIGF_FB_BUTTON_THUMBS_OPT_OFF</option>
        </param>					
        <param name="fancybox_button_share" type="list" default="on" label="PLG_SIGF_FB_BUTTON_SHARE" description="PLG_SIGF_FB_BUTTON_SHARE_DESC">
            <option value="on">PLG_SIGF_FB_BUTTON_SHARE_OPT_ON</option>
            <option value="off">PLG_SIGF_FB_BUTTON_SHARE_OPT_OFF</option>
        </param>	
        <param name="fancybox_button_download" type="list" default="on" label="PLG_SIGF_FB_BUTTON_DOWNLOAD" description="PLG_SIGF_FB_BUTTON_DOWNLOAD_DESC">
            <option value="on">PLG_SIGF_FB_BUTTON_DOWNLOAD_OPT_ON</option>
            <option value="off">PLG_SIGF_FB_BUTTON_DOWNLOAD_OPT_OFF</option>
        </param>	
        <param name="fancybox_button_zoom" type="list" default="on" label="PLG_SIGF_FB_BUTTON_ZOOM" description="PLG_SIGF_FB_BUTTON_ZOOM_DESC">
            <option value="on">PLG_SIGF_FB_BUTTON_ZOOM_OPT_ON</option>
            <option value="off">PLG_SIGF_FB_BUTTON_ZOOM_OPT_OFF</option>
        </param>	
        <param name="fancybox_button_close" type="list" default="on" label="PLG_SIGF_FB_BUTTON_CLOSE" description="PLG_SIGF_FB_BUTTON_CLOSE_DESC">
            <option value="on">PLG_SIGF_FB_BUTTON_CLOSE_OPT_ON</option>
            <option value="off">PLG_SIGF_FB_BUTTON_CLOSE_OPT_OFF</option>
        </param>
        <param type="spacer" default="PLG_SIGF_SPACER_FB_LABELING" />
        <param name="fancybox_language" type="list" default="en" label="PLG_SIGF_FB_LANG" description="PLG_SIGF_FB_LANG_DESC">
            <option value="en">PLG_SIGF_FB_LANG_OPT_EN</option>
            <option value="de">PLG_SIGF_FB_LANG_OPT_DE</option>
            <option value="xx">PLG_SIGF_FB_LANG_OPT_XX</option>
        </param>
        <param name="fancybox_close" type="text" default="" hint="PLG_SIGF_FB_CLOSE" label="PLG_SIGF_FB_LANG_CLOSE" description="PLG_SIGF_FB_LANG_CLOSE_DESC" />
        <param name="fancybox_next" type="text" default="" hint="PLG_SIGF_FB_NEXT" label="PLG_SIGF_FB_LANG_NEXT" description="PLG_SIGF_FB_LANG_NEXT_DESC" />
        <param name="fancybox_prev" type="text" default="" hint="PLG_SIGF_FB_PREVIOUS" label="PLG_SIGF_FB_LANG_PREV" description="PLG_SIGF_FB_LANG_PREV_DESC" />
        <param name="fancybox_error" type="text" default="" hint="PLG_SIGF_FB_REQUEST_CANNOT_BE_LOADED" label="PLG_SIGF_FB_LANG_ERROR" description="PLG_SIGF_FB_LANG_ERROR_DESC" />
        <param name="fancybox_play_start" type="text" default="" hint="PLG_SIGF_FB_START_SLIDESHOW" label="PLG_SIGF_FB_LANG_PLAY_START" description="PLG_SIGF_FB_LANG_PLAY_START_DESC" />
        <param name="fancybox_play_stop" type="text" default="" hint="PLG_SIGF_FB_PAUSE_SLIDESHOW" label="PLG_SIGF_FB_LANG_PLAY_STOP" description="PLG_SIGF_FB_LANG_PLAY_STOP_DESC" />
        <param name="fancybox_full_screen" type="text" default="" hint="PLG_SIGF_FB_FULL_SCREEN" label="PLG_SIGF_FB_LANG_FULL_SCREEN" description="PLG_SIGF_FB_LANG_FULL_SCREEN_DESC" />
        <param name="fancybox_thumbs" type="text" default="" hint="PLG_SIGF_FB_THUMBS" label="PLG_SIGF_FB_LANG_THUMBS" description="PLG_SIGF_FB_LANG_THUMBS_DESC" />
        <param name="fancybox_download" type="text" default="" hint="PLG_SIGF_FB_DOWNLOAD" label="PLG_SIGF_FB_LANG_DOWNLOAD" description="PLG_SIGF_FB_LANG_DOWNLOAD_DESC" />
        <param name="fancybox_share" type="text" default="" hint="PLG_SIGF_FB_SHARE" label="PLG_SIGF_FB_LANG_SHARE" description="PLG_SIGF_FB_LANG_SHARE_DESC" />
        <param name="fancybox_zoom" type="text" default="" hint="PLG_SIGF_FB_ZOOM" label="PLG_SIGF_FB_LANG_ZOOM" description="PLG_SIGF_FB_LANG_ZOOM_DESC" />
    </params>
    <!-- Files -->
    <files folder="plugin" destination="sigf">
        <filename plugin="sigf">sigf.php</filename>
        <folder>sigf</folder>
    </files>
    <languages folder="plugin">
        <language tag="en-GB">language/en-GB/en-GB.plg_content_sigf.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_content_sigf.sys.ini</language>
    </languages>
</install>
