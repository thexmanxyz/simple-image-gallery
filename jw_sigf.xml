<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="content" method="upgrade">
    <name>Simple Image Gallery Fork</name>
    <author>Andreas Kar</author>
    <authorEmail>andreas.kar@gmx.at</authorEmail>
    <copyright>Copyright Â© 2020 Andreas Kar. All rights reserved.</copyright>
    <creationDate>27.01.2020</creationDate>
    <license>https://www.gnu.org/licenses/gpl.html GNU/GPL</license>
    <version>4.2.0</version>
    <description>JW_PLG_SIGF_XML_DESC</description>
    <!-- Parameters -->
    <params>
        <param name="show_copyright" type="list" default="on" label="JW_PLG_SIGF_SHOW_COPYRIGHT" description="JW_PLG_SIGF_SHOW_COPYRIGHT_DESC">
            <option value="on">JW_PLG_SIGF_SHOW_COPYRIGHT_OPT_ON</option>
            <option value="off">JW_PLG_SIGF_SHOW_COPYRIGHT_OPT_OFF</option>
        </param>
        <param name="mootools" type="list" default="on" label="JW_PLG_SIGF_MOOTOOLS" description="JW_PLG_SIGF_MOOTOOLS_DESC">
            <option value="on">JW_PLG_SIGF_MOOTOOLS_OPT_ON</option>
            <option value="off">JW_PLG_SIGF_MOOTOOLS_OPT_OFF</option>
        </param>
        <param name="galleries_rootfolder" type="text" default="images/stories" label="JW_PLG_SIGF_ROOTFOLDER" description="JW_PLG_SIGF_ROOTFOLDER_DESC" />
        <param name="jQueryHandling" type="list" default="1.12.4" label="JW_PLG_SIGF_JQUERY_HANDLING" description="JW_PLG_SIGF_JQUERY_HANDLING_DESC">
            <option value="0">JW_PLG_SIGF_DO_NOT_LOAD_THE_JQUERY_LIBRARY</option>
            <option value="1.8.3">JW_PLG_SIGF_LOAD_V1_8_X_LATEST_COPY</option>
            <option value="1.9.1">JW_PLG_SIGF_LOAD_V1_9_X_LATEST_COPY</option>
            <option value="1.10.2">JW_PLG_SIGF_LOAD_V1_10_X_LATEST_COPY</option>
            <option value="1.11.3">JW_PLG_SIGF_LOAD_V1_11_X_LATEST_COPY</option>
            <option value="1.12.4">JW_PLG_SIGF_LOAD_V1_12_X_LATEST_COPY</option>
        </param>
        <param name="thb_width" type="text" default="360" size="6" label="JW_PLG_SIGF_TW" description="JW_PLG_SIGF_TW_DESC" />
        <param name="thb_height" type="text" default="240" size="6" label="JW_PLG_SIGF_TH" description="JW_PLG_SIGF_TH_DESC" />
        <param name="jpg_quality" type="text" default="90" size="6" label="JW_PLG_SIGF_TQ" description="JW_PLG_SIGF_TQ_DESC" />
        <param name="cache_expire_time" type="text" default="86400" size="6" label="JW_PLG_SIGF_TCEXP" description="JW_PLG_SIGF_TCEXP_DESC" />
        <param name="memoryLimit" type="text" default="" size="6" label="JW_PLG_SIGF_ML" description="JW_PLG_SIGF_ML_DESC" />
        <param name="fancybox_cdn" type="list" default="on" label="JW_PLG_SIGF_FB_CDN" description="JW_PLG_SIGF_FB_CDN_DESC">
            <option value="on">JW_PLG_SIGF_FB_CDN_OPT_ON</option>
            <option value="off">JW_PLG_SIGF_FB_CDN_OPT_OFF</option>
        </param>
        <param name="fancybox_version" type="text" hint="3.5.7" default="3.5.7" label="JW_PLG_SIGF_FB_VERSION" description="JW_PLG_SIGF_FB_VERSION_DESC" />
        <param name="fancybox_language" type="list" default="en" label="JW_PLG_SIGF_FB_LANG" description="JW_PLG_SIGF_FB_LANG_DESC">
            <option value="en">JW_PLG_SIGF_FB_LANG_OPT_EN</option>
            <option value="de">JW_PLG_SIGF_FB_LANG_OPT_DE</option>
            <option value="xx">JW_PLG_SIGF_FB_LANG_OPT_XX</option>
        </param>
        <param name="fancybox_image_target" type="list" default="_blank" label="JW_PLG_SIGF_FB_IMAGE_TARGET" description="JW_PLG_SIGF_FB_IMAGE_TARGET_DESC">
            <option value="_self">JW_PLG_SIGF_FB_IMAGE_TARGET_OPT_SELF</option>
            <option value="_blank">JW_PLG_SIGF_FB_IMAGE_TARGET_OPT_BLANK</option>
            <option value="_parent">JW_PLG_SIGF_FB_IMAGE_TARGET_OPT_PARENT</option>
            <option value="_top">JW_PLG_SIGF_FB_IMAGE_TARGET_OPT_TOP</option>
        </param>
        <param name="fancybox_close" type="text" default="" hint="JW_PLG_SIGF_FB_CLOSE" label="JW_PLG_SIGF_FB_LANG_CLOSE" description="JW_PLG_SIGF_FB_LANG_CLOSE_DESC" />
        <param name="fancybox_next" type="text" default="" hint="JW_PLG_SIGF_FB_NEXT" label="JW_PLG_SIGF_FB_LANG_NEXT" description="JW_PLG_SIGF_FB_LANG_NEXT_DESC" />
        <param name="fancybox_prev" type="text" default="" hint="JW_PLG_SIGF_FB_PREVIOUS" label="JW_PLG_SIGF_FB_LANG_PREV" description="JW_PLG_SIGF_FB_LANG_PREV_DESC" />
        <param name="fancybox_error" type="text" default="" hint="JW_PLG_SIGF_FB_REQUEST_CANNOT_BE_LOADED" label="JW_PLG_SIGF_FB_LANG_ERROR" description="JW_PLG_SIGF_FB_LANG_ERROR_DESC" />
        <param name="fancybox_play_start" type="text" default="" hint="JW_PLG_SIGF_FB_START_SLIDESHOW" label="JW_PLG_SIGF_FB_LANG_PLAY_START" description="JW_PLG_SIGF_FB_LANG_PLAY_START_DESC" />
        <param name="fancybox_play_stop" type="text" default="" hint="JW_PLG_SIGF_FB_PAUSE_SLIDESHOW" label="JW_PLG_SIGF_FB_LANG_PLAY_STOP" description="JW_PLG_SIGF_FB_LANG_PLAY_STOP_DESC" />
        <param name="fancybox_full_screen" type="text" default="" hint="JW_PLG_SIGF_FB_FULL_SCREEN" label="JW_PLG_SIGF_FB_LANG_FULL_SCREEN" description="JW_PLG_SIGF_FB_LANG_FULL_SCREEN_DESC" />
        <param name="fancybox_thumbs" type="text" default="" hint="JW_PLG_SIGF_FB_THUMBS" label="JW_PLG_SIGF_FB_LANG_THUMBS" description="JW_PLG_SIGF_FB_LANG_THUMBS_DESC" />
        <param name="fancybox_download" type="text" default="" hint="JW_PLG_SIGF_FB_DOWNLOAD" label="JW_PLG_SIGF_FB_LANG_DOWNLOAD" description="JW_PLG_SIGF_FB_LANG_DOWNLOAD_DESC" />
        <param name="fancybox_share" type="text" default="" hint="JW_PLG_SIGF_FB_SHARE" label="JW_PLG_SIGF_FB_LANG_SHARE" description="JW_PLG_SIGF_FB_LANG_SHARE_DESC" />
        <param name="fancybox_zoom" type="text" default="" hint="JW_PLG_SIGF_FB_ZOOM" label="JW_PLG_SIGF_FB_LANG_ZOOM" description="JW_PLG_SIGF_FB_LANG_ZOOM_DESC" />
    </params>
    <!-- Files -->
    <files folder="plugin" destination="jw_sigf">
        <filename plugin="jw_sigf">jw_sigf.php</filename>
        <folder>jw_sigf</folder>
    </files>
    <languages folder="plugin">
        <language tag="en-GB">language/en-GB/en-GB.plg_content_jw_sigf.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_content_jw_sigf.sys.ini</language>
    </languages>
</install>
